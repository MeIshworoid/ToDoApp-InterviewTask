@model List<ToDoItem>

<h1>To-Do List</h1>

<p>
    <a class="btn btn-success" asp-controller="ToDo" asp-action="Create">Add New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>S.N.</th>
            <th>Task Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Is Complete</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            int i = 1;
            <tr>
                <td>@i</td>
                <td>
                    @item.Title
                </td>
                <td>@item.Description</td>
                <td>@item.DueDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.IsCompleted</td>
                <td>
                    <a class="btn btn-primary" asp-controller="ToDo" asp-action="Edit" asp-route-toDoId="@item.Id">Edit</a> |

                </td>
            </tr>
            i++;
        }
    </tbody>
</table>


